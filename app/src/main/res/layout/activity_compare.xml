<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    >


    <TextView
        android:id="@+id/cmp_upper_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연습 결과"
        android:textSize="28sp"
        android:layout_marginBottom="10dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cmp_upper_part"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cmp_upper_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cmp_group_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cmp_group_trns"
            android:background="@color/question_orange"
            android:paddingHorizontal="8dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/cmp_new_pic_expl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[참조용 사진]\n이렇게 지었어야 합니다"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <ImageView
                android:id="@+id/cmp_new_pic_img"
                android:layout_width="190dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/yuna"
                app:layout_constraintTop_toBottomOf="@+id/cmp_new_pic_expl"
                app:layout_constraintStart_toStartOf="@+id/cmp_new_pic_expl"
                app:layout_constraintEnd_toEndOf="@+id/cmp_new_pic_expl"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cmp_group_trns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cmp_group_new"
        android:background="@color/bright_blue"
        android:paddingHorizontal="8dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/cmp_trns_pic_expl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[표정 연습 사진]\n이렇게 지었습니다"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/cmp_trns_pic_img"
            android:layout_width="190dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/suzy"
            app:layout_constraintTop_toBottomOf="@+id/cmp_trns_pic_expl"
            app:layout_constraintStart_toStartOf="@+id/cmp_trns_pic_expl"
            app:layout_constraintEnd_toEndOf="@+id/cmp_trns_pic_expl"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cmp_lower_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmp_upper_part">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cmp_score_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점수는"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cmp_score"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cmp_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="100점"
                android:textSize="24sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cmp_score_placeholder"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>