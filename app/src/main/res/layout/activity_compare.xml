<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    >






    <TextView
        android:id="@+id/cmp_upper_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연습 결과"
        android:textSize="28sp"
        android:paddingVertical="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:id="@+id/cmp_upper_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cmp_upper_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cmp_group_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cmp_group_trns"
            android:background="@color/question_orange"
            android:layout_weight="0.5"
            android:paddingHorizontal="8dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/cmp_new_pic_expl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[표정 연습한 사진]"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <ImageView
                android:id="@+id/cmp_new_pic_img"
                android:layout_width="190dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/yuna"
                app:layout_constraintTop_toBottomOf="@+id/cmp_new_pic_expl"
                app:layout_constraintStart_toStartOf="@+id/cmp_new_pic_expl"
                app:layout_constraintEnd_toEndOf="@+id/cmp_new_pic_expl"
                />
            <com.example.myapplication.vision.GraphicOverlay
                android:id="@+id/new_graphic_overlay"
                android:layout_width="190dp"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@+id/cmp_new_pic_expl"
                app:layout_constraintStart_toStartOf="@+id/cmp_new_pic_expl"
                app:layout_constraintEnd_toEndOf="@+id/cmp_new_pic_expl"
                android:layout_alignParentStart="true"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cmp_group_trns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cmp_group_new"
        android:background="@color/bright_blue"
        android:layout_weight="0.5"
        android:paddingHorizontal="8dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/cmp_trns_pic_expl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[참조용 사진]"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/cmp_trns_pic_img"
            android:layout_width="190dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/cmp_trns_pic_expl"
            app:layout_constraintStart_toStartOf="@+id/cmp_trns_pic_expl"
            app:layout_constraintTop_toBottomOf="@+id/cmp_trns_pic_expl"
            tools:src="@drawable/suzy" />


        <com.example.myapplication.vision.GraphicOverlay
            android:id="@+id/trns_graphic_overlay"
            android:layout_width="190dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="@+id/cmp_trns_pic_expl"
            app:layout_constraintStart_toStartOf="@+id/cmp_trns_pic_expl"
            app:layout_constraintTop_toBottomOf="@+id/cmp_trns_pic_expl"
            android:layout_alignParentStart="true"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>


    <TextView
        android:id="@+id/cmp_score_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유사도 점수는"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cmp_upper_part"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/cmp_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="100점"
        android:textStyle="bold"
        android:textSize="42sp"
        android:textColor="@color/black"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmp_upper_part" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cmp_lower_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmp_upper_part">




<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:gravity="center"-->
<!--            android:orientation="horizontal"-->
<!--            android:paddingVertical="10dp"-->
<!--            app:layout_constraintTop_toTopOf="parent">-->



<!--        </LinearLayout>-->


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/cmp_goback"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_back_black"
        android:alpha="0.65"
        app:layout_constraintTop_toTopOf="@+id/cmp_upper_tv"
        app:layout_constraintBottom_toBottomOf="@+id/cmp_upper_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        android:padding="10dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cmp_gonext"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="재촬영을 원한다면 클릭!"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_quiz_comment"
        android:backgroundTint="@color/teal_200"
        android:drawableEnd="@drawable/click"
        style="@android:style/Widget.Button"
        app:layout_constraintTop_toBottomOf="@+id/cmp_score"
        app:layout_constraintStart_toStartOf="@+id/cmp_score"
        app:layout_constraintEnd_toEndOf="@+id/cmp_score"
        android:layout_margin="15dp"
        android:padding="15dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cmp_app_reset"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="처음부터 재시작  "
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_quiz_comment"
        android:backgroundTint="@color/teal_700"
        android:drawableEnd="@drawable/baseline_flip_camera_white"
        style="@android:style/Widget.Button"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cmp_gonext"
        app:layout_constraintStart_toStartOf="@+id/cmp_score"
        app:layout_constraintEnd_toEndOf="@+id/cmp_score"
        android:layout_margin="15dp"
        android:padding="8dp"
        />


    <TextView
        android:id="@+id/cmp_result_expl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="10dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>